<!doctype html>
<html lang="tr" class="dark">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>M1 DB Console</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.15/codemirror.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.15/theme/ayu-dark.min.css">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
<div class="app-layout">
    <aside class="sidebar">
        <header>
            <h2>M1</h2>
        </header>
        <nav id="table-list">
            <p>Tablolar yükleniyor...</p>
        </nav>
    </aside>

    <main class="main-content">
        <div class="sql-editor-container">
            <form id="sql-form">
                <textarea id="sql-editor">-- Hoş Geldiniz! SQL komutunuzu buraya yazın.</textarea>
                <div class="editor-actions">
                    <button type="submit" class="btn">Çalıştır (Ctrl+Enter)</button>
                </div>
            </form>
        </div>

        <div class="result-container">
            <div class="result-tabs">
                <button class="tab-btn active" data-tab="results">Sonuçlar</button>
                <button class="tab-btn" data-tab="message">Mesaj</button>
            </div>
            <div class="tab-content" id="results-content">
                <!-- Sonuç tablosu buraya gelecek -->
            </div>
            <div class="tab-content hidden" id="message-content">
                <!-- Mesajlar buraya gelecek -->
            </div>
        </div>
    </main>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.15/codemirror.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.15/mode/sql/sql.min.js"></script>
<script src="/script.js"></script>
</body>
</html>